    <!--
        Added the entity OptionSet.
    -->
    <changeSet id="20221120204055-1" author="jhipster">
        <createTable tableName="option_set">
            <column name="optionsetid" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="uid" type="varchar(11)">
                <constraints nullable="false" unique="true" uniqueConstraintName="ux_option_set__uid" />
            </column>
            <column name="code" type="varchar(255)">
                <constraints nullable="true" unique="true" uniqueConstraintName="ux_option_set__code" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true" uniqueConstraintName="ux_option_set__name" />
            </column>
            <column name="created" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="updated" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="valuetype" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="version" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="createdby" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="lastupdatedby" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="attributevalues" type="JSONB" defaultValue="{}"/>
            <column name="translations" type="JSONB"/>
            <column name="sharing" type="JSONB" defaultValue="{}"/>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="option_set" columnName="created" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="option_set" columnName="updated" columnDataType="${datetimeType}"/>
    </changeSet>

