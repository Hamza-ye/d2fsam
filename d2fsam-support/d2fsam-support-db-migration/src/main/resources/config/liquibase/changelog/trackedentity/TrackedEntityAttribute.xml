            </column>
            <column name="uniquefield" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="generated" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="pattern" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="textpattern" type="JSONB">
                <constraints nullable="true" />
            </column>
            <column name="fieldmask" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="orgunitscope" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="skipsynchronization" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="optionsetid" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="lastupdatedby" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="createdby" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="attributevalues" type="JSONB" defaultValue="{}"/>
            <column name="translations" type="JSONB"/>
            <column name="sharing" type="JSONB" defaultValue="{}"/>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="tracked_entity_attribute" columnName="created" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="tracked_entity_attribute" columnName="updated" columnDataType="${datetimeType}"/>
    </changeSet>

    <changeSet id="20230114221608-1-relations" author="jhipster">

        <createTable tableName="tracked_entity_attribute__legend_set">
            <column name="trackedentityattributeid" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="sortorder" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="maplegendsetid" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="trackedentityattributeid, sortorder" tableName="tracked_entity_attribute__legend_set"/>
    </changeSet>

