    <!--
        Added the entity Team.
    -->
    <changeSet id="20221120204031-1" author="jhipster">
        <createTable tableName="team">
            <column name="teamid" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="uid" type="varchar(11)">
                <constraints nullable="false" unique="true" uniqueConstraintName="ux_team__uid" />
            </column>
            <column name="code" type="varchar(255)">
                <constraints nullable="true" unique="true" uniqueConstraintName="ux_team__code" />
            </column>
            <column name="created" type="${datetimeType}">
                <constraints nullable="false" />
            </column>
            <column name="updated" type="${datetimeType}">
                <constraints nullable="false" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="description" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="comments" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="rating" type="double">
                <constraints nullable="true" />
            </column>
            <column name="teamtype" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="inactive" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="activityid" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="createdby" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="lastupdatedby" type="bigint">
                <constraints nullable="true" />
            </column>
            <column name="attributevalues" type="JSONB" defaultValue="{}"/>
            <column name="translations" type="JSONB"/>
            <column name="sharing" type="JSONB" defaultValue="{}"/>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="team" columnName="created" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="team" columnName="updated" columnDataType="${datetimeType}"/>
    </changeSet>

    <changeSet id="20221120204031-1-relations" author="jhipster">

        <createTable tableName="team__members">
            <column name="teamid" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="member_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="teamid, member_id" tableName="team__members"/>

        <createTable tableName="team__managed_teams">
            <column name="teamid" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="managedteamid" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="teamid, managedteamid" tableName="team__managed_teams"/>
    </changeSet>

